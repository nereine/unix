### Autostart
# Idle and screenlock (when first 'timeout 300', shows blackscreen - but when resume from sleep, use default swaylock config)
exec swayidle -w timeout 60 'swaylock -f -c 000000' timeout 300 'swaymsg "output * dpms off"' resume 'swaymsg "output * dpms on"' before-sleep 'swaylock'

### Output
default_orientation auto
#output * resolution --custom 1920x1080
font pango:hack 12
gaps inner 6
gaps outer 6
default_border pixel 2
default_floating_border pixel 4
titlebar_border_thickness 0

# From 'iceberg' theme (bright)
set $blue "#91acd1"
set $cyan "#95c4ce"
set $white "#efefef"
set $black "#111111"
set $green "#c0ca8e"
set $magenta "#ada0d3"
# Some colors have shades (red1/yellow1 is OpenBSD colors)
set $red0 "#e98989"
set $red1 "#cf4229"
set $dark0 "#333333"
set $dark1 "#6f6f6f"
set $yellow0 "#e9b189"
set $yellow1 "#f2ca30"

# client.<class> <border> <background> <text> [<indicator> [<child_border>]]
client.focused $blue $blue $black $yellow1
output * bg #000000 solid_color
